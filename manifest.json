{
  "manifest_version": 2,
  "name": "Chef",
  "description": "Automate your browser experience by creating different \"recipes\" for sharing the content you find on the web.",
  "version": "0.0.1",
  "icons": { 
    "16": "images/chef_icon_128.png" ,
    "48": "images/chef_icon_128.png",
    "128": "images/chef_icon_128.png" 
    },
  "background": {
    "page": "background.html"
    },
  "content_scripts": [
  {
   "matches": [
     "http://*/*",
     "https://*/*"
   ],
   "js": [
     "js/jquery-1.9.1.min.js",
     "js/chef.js"
    ]
  }

  ],
  "permissions": [
    "webRequest",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {                    
      "19": "images/chef_icon_128.png" ,
      "38": "images/chef_icon_128.png" 
    },
    "default_title": "Chef",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}